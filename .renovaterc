{
  "extends": ["config:base", ":disableDependencyDashboard"],
  "schedule": ["before 3am every weekend"],
  "automerge": true,
  "major": {
    "automerge": false
  },
  "packageRules": [
    {
      "matchPackageNames": ["jest", "ts-jest", "jest-environment-jsdom", "@types/jest"],
      "matchUpdateTypes": ["major"],
      "groupName": "jest_ts",
      "groupSlug": "jest_ts"
    }
  ]
}
